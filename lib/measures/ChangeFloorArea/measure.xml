  <class_name>ChangeFloorArea</class_name>
  <display_name>Change Floor Area</display_name>
  <description>This measure will change the floor area of a building multiplying by a user-defined fraction.</description>
  <modeler_description>The floor area and associated vertices of the building surfaces will be changed.
            Primarily it is tested for a single zone model</modeler_description>
  <arguments>
    <argument>
      <name>fa_fraction</name>
      <display_name>Fractional increase (or decrease) in floor area</display_name>
      <type>Double</type>
      <required>true</required>
      <model_dependent>false</model_dependent>
      <default_value>1</default_value>
    </argument>
  </arguments>
